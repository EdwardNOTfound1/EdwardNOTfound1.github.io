    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dice Roller</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Use Inter font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        
        /* Spin animation for rolling */
        @keyframes spin-fast {
            from {
                transform: rotate(0deg) scale(0.5);
                opacity: 0.5;
            }
            to {
                transform: rotate(1080deg) scale(1);
                opacity: 1;
            }
        }
        .animate-spin-fast {
            animation: spin-fast 1s cubic-bezier(0.25, 1, 0.5, 1);
        }

        /* Pop animation for footer buttons */
        @keyframes pop {
            0% { transform: scale(1); }
            50% { transform: scale(1.15); }
            100% { transform: scale(1); }
        }
        .animate-pop {
            animation: pop 0.2s ease-out;
        }

        /* NEW: Animation for removing a die */
        @keyframes zoom-out {
            from {
                transform: scale(1);
                opacity: 1;
            }
            to {
                transform: scale(0);
                opacity: 0;
            }
        }
        .animate-zoom-out {
            animation: zoom-out 0.3s ease-out;
        }

        /* Custom styles */
        .die-button {
            border-radius: 10px;
            transition: all 0.2s ease-out;
        }
        .die-button:not(.selected):hover {
            opacity: 0.8;
        }

        .fill-green-500 { fill: #22c55e; }
        .fill-cyan-500 { fill: #06b6d4; }
        .fill-purple-500 { fill: #a855f7; }
        .fill-pink-500 { fill: #ec4899; }
        .fill-red-500 { fill: #ef4444; }
        .fill-orange-500 { fill: #f97316; }

        input[type='number']::-webkit-inner-spin-button,
        input[type='number']::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        input[type='number'] {
            -moz-appearance: textfield;
            appearance: textfield;
        }
    </style>
